{
  "name": "task-done",
  "displayName": "Task Done",
  "description": "Close all opened tabs and collapse folders in explorer when the task is done",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/aliataf/task-done.git"
  },
  "license": "MIT",
  "publisher": "aliataf",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "icon": "images/task-done.png",
  "contributes": {
    "commands": [
      {
        "command": "task-done.taskDone",
        "title": "Task Done",
        "icon": {
          "light": "./images/task-done.png",
          "dark": "./images/task-done.png"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "task-done.taskDone",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "1.107.0",
    "@types/glob": "9.0.0",
    "@types/mocha": "10.0.10",
    "@types/node": "25.0.3",
    "eslint": "9.39.2",
    "@typescript-eslint/eslint-plugin": "8.52.0",
    "@typescript-eslint/parser": "8.52.0",
    "glob": "13.0.0",
    "mocha": "11.7.5",
    "typescript": "5.9.3",
    "vscode-test": "1.6.1",
    "ts-loader": "9.5.4",
    "webpack": "5.104.1",
    "webpack-cli": "6.0.1"
  }
}
